<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NotificationActivities.RecieveCall">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp" android:background="@color/colorConnected">
        <TextView
                android:text="VIDEO CALL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" android:textAlignment="center"
                android:layout_marginTop="20dp" android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>
        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/googleg_standard_color_18"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000" android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/callername"
                android:layout_gravity="center_horizontal" android:textAlignment="center"
                android:layout_marginTop="20dp" android:textSize="24sp"
                android:textColor="@color/common_google_signin_btn_text_dark_default"/>
        <TextView
                android:text="INCOMING"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" android:textAlignment="center"
                android:layout_marginTop="20dp" android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/stat_sys_phone_call"
            android:layout_alignParentStart="false" android:layout_alignParentBottom="true"
            android:id="@+id/acceptcall" app:backgroundTint="@color/colorConnected"
            android:layout_marginBottom="32dp" android:layout_alignParentEnd="true" android:layout_marginRight="32dp"
            app:fabSize="normal" app:elevation="8dp" app:useCompatPadding="false"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
            android:id="@+id/cancelcall" app:backgroundTint="@color/colorFailed"
            android:layout_marginLeft="32dp" android:layout_marginBottom="32dp" app:fabSize="normal"
            app:elevation="6dp"/>
</RelativeLayout>